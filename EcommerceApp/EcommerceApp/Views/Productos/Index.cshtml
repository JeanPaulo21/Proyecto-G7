@model List<EcommerceApp.Models.Producto>
@{
    ViewData["Title"] = "Catálogo";
}

<div class="container mt-5">
    <h2 class="mb-4">Catálogo de Productos</h2>
    <div class="row">
        @foreach (var item in Model)
        {
            <div class="col-md-4 mb-4">
                <div class="card h-100 shadow-sm d-flex flex-column justify-content-between producto-card">
                    <div class="overflow-hidden text-center p-3">
                        <img src="@Url.Content("~" + item.ImagenUrl)"
                             class="img-fluid producto-img"
                             alt="@item.Nombre">
                    </div>
                    <div class="card-body d-flex flex-column">
                        <h5 class="card-title">@item.Nombre</h5>
                        <p class="card-text">@item.Descripcion</p>
                        <p class="card-text text-success fw-bold">$@item.Precio</p>
                        <a href="/Productos/Detalle/@item.Id" class="btn btn-primary mt-auto w-100">Ver Detalle</a>
                    </div>
                </div>
            </div>
        }
    </div>
</div>


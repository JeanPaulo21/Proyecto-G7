@model EcommerceApp.Models.Producto
@{
    ViewData["Title"] = "Detalle del Producto";
}

<div class="container mt-5">
    <div class="row">
        <div class="col-md-6">
            <!-- Imagen del producto -->
            <img src="@Url.Content("~" + Model.ImagenUrl)" class="img-fluid" alt="@Model.Nombre">
        </div>
        <div class="col-md-6">
            <h2>@Model.Nombre</h2>
            <p>@Model.Descripcion</p>
            <h3 class="text-success">₡@Model.Precio.ToString("N2")</h3>

            <!-- Formulario para agregar al carrito -->
            <form asp-controller="Carrito" asp-action="Agregar" method="post">
                <input type="hidden" name="idProducto" value="@Model.Id" />
                <button type="submit" class="btn btn-success">
                    <i class="bi bi-cart-plus"></i> Agregar al carrito
                </button>
            </form>
        </div>
    </div>
</div>

